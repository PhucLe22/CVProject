<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Thêm Người Dùng</title>
</head>

<body>
  <center>
    <h2>Thêm người dùng mới</h2>

    <form action="/users/store" method="POST">
      <table>
        <tr>
          <td><label for="username">Tên người dùng:</label></td>
          <td><input type="text" id="username" name="username" required minlength="1" maxlength="255"></td>
        </tr>

        <tr>
          <td><label for="ava">Link ảnh đại diện (ava):</label></td>
          <td><input type="text" id="ava" name="ava"></td>
        </tr>

        <tr>
          <td><label for="email">Email:</label></td>
          <td><input type="email" id="email" name="email" required></td>
        </tr>

        <tr>
          <td><label for="phonenumber">Số điện thoại:</label></td>
          <td><input type="text" id="phonenumber" name="phonenumber"></td>
        </tr>

        <tr>
          <td><label for="major">Chuyên ngành:</label></td>
          <td><input type="text" id="major" name="major"></td>
        </tr>

        <tr>
          <td><label for="birthday">Ngày sinh:</label></td>
          <td><input type="date" id="birthday" name="birthday"></td>
        </tr>

        <tr>
          <td><label for="password">Mật khẩu:</label></td>
          <td><input type="password" id="password" name="password" required minlength="6"></td>
        </tr>

        <tr>
          <td><label for="confirm_password">Xác nhận mật khẩu:</label></td>
          <td><input type="password" id="confirm_password" name="confirm_password" required minlength="6"></td>
        </tr>

        <tr>
          <td colspan="2">
            <button type="submit">Tạo</button>
          </td>
        </tr>
      </table>
    </form>

    <br>
    <a href="/business/register">Are you hiring?</a>
  </center>

  <script>
    // Check confirm password client-side trước khi gửi
    const form = document.querySelector('form');
    form.addEventListener('submit', function (e) {
      const password = document.getElementById('password').value;
      const confirmPassword = document.getElementById('confirm_password').value;
      if (password !== confirmPassword) {
        e.preventDefault();
        alert('❌ Mật khẩu và xác nhận mật khẩu không khớp.');
      }
    });
  </script>
</body>

</html>