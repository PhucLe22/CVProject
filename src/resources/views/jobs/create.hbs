<form action="/jobs/store" method="POST">
    <h2>Đăng tin tuyển dụng</h2>

    <label for="title">Tên công việc:</label><br>
    <input type="text" id="title" name="title" required><br><br>

    <label for="description">Mô tả công việc:</label><br>
    <textarea id="description" name="description" rows="4" required></textarea><br><br>

    <label for="location">Địa điểm làm việc:</label><br>
    <input type="text" id="location" name="location" required><br><br>

    <label for="salary">Mức lương:</label><br>
    <input type="text" id="salary" name="salary" required><br><br>

    <label for="company">Tên công ty:</label><br>
    <input type="text" id="company" name="company" required><br><br>

    <label for="logo">Link logo công ty:</label><br>
    <input type="text" id="logo" name="logo"><br><br>

    <label for="contact">Thông tin liên hệ:</label><br>
    <input type="text" id="contact" name="contact" required><br><br>

    <button type="submit">Đăng tuyển</button>
</form>