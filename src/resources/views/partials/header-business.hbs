<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navbar Layout</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .custom-navbar {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            padding: 0.75rem 1rem;
        }

        .navbar-brand {
            font-weight: bold;
            color: #007bff !important;
        }

        .dropdown-menu {
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border: 1px solid #dee2e6;
        }

        .dropdown-item {
            padding: 8px 16px;
            transition: background-color 0.2s ease;
        }

        .dropdown-item:hover {
            background-color: #f1f3f5;
        }

        .nav-link {
            color: #495057 !important;
            margin: 0 8px;
            padding: 8px 12px !important;
            border-radius: 4px;
            transition: all 0.2s ease;
        }

        .nav-link:hover {
            background-color: #e9ecef;
            color: #007bff !important;
        }

        .btn-outline-primary {
            margin-left: 8px;
        }

        .navbar-toggler {
            border: none;
            padding: 4px 8px;
        }

        .navbar-toggler:focus {
            box-shadow: none;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg custom-navbar">
        <div class="container-fluid">
            <!-- Logo/Brand -->
            <a class="navbar-brand" href="/home">
                <i class="fas fa-graduation-cap me-2"></i>
                Business
            </a>

            <!-- Toggle button cho mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar content -->
            <div class="collapse navbar-collapse" id="navbarContent">
                <!-- Menu chính bên trái -->
                <ul class="navbar-nav me-auto">
                    <!-- Dropdown Courses -->
                    {{!-- <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Courses
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/courses/create">
                                    <i class="fas fa-plus me-2"></i>Add Courses
                                </a></li>
                            <li><a class="dropdown-item" href="/courses">
                                    <i class="fas fa-list me-2"></i>All Courses
                                </a></li>
                            <li><a class="dropdown-item" href="/test/stored/courses">
                                    <i class="fas fa-bookmark me-2"></i>My Courses
                                </a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="/courses/edit">
                                    <i class="fas fa-edit me-2"></i>Edit Courses
                                </a></li>
                        </ul>
                    </li> --}}

                    <!-- Business menu -->
                    <li class="nav-item">
                        <a class="nav-link" href="/business/register">
                            <i class="fas fa-building me-1"></i>Business Register
                        </a>
                    </li>
                </ul>

                <!-- Menu user bên phải -->
                <ul class="navbar-nav">
                    <!-- User dropdown -->
                    <!-- User dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            <!-- Hiển thị tên user / business / account -->
                            {{#if currentUser}}
                            <i class="fas fa-user me-1"></i> {{currentUser.name}}
                            {{else}}
                            {{#if currentBusiness}}
                            <i class="fas fa-building me-1"></i> {{currentBusiness.title}}
                            {{else}}
                            <i class="fas fa-user me-1"></i> Account
                            {{/if}}
