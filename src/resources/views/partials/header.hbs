<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Navbar Layout</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .custom-navbar {
      background-color: #f8f9fa;
      border-bottom: 1px solid #dee2e6;
      padding: 0.75rem 1rem;
      position: relative;
      /* Thêm để đảm bảo dropdown hiển thị đúng */
    }

    .navbar-brand {
      font-weight: bold;
      color: #007bff !important;
    }

    .dropdown:hover .dropdown-menu {
      display: block;
    }

    .dropdown-menu {
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      border: 1px solid #dee2e6;
      z-index: 1050;
      /* Đảm bảo dropdown luôn hiển thị trên cùng */
      min-width: 200px;
      /* Tăng độ rộng tối thiểu */
      display: none;
      /* Ẩn mặc định */
    }

    .dropdown-menu.show {
      display: block;
    }

    .dropdown-item {
      padding: 8px 16px;
      transition: background-color 0.2s ease;
    }

    .dropdown-item:hover {
      background-color: #f1f3f5;
    }

    .nav-link {
      color: #495057 !important;
      margin: 0 8px;
      padding: 8px 12px !important;
      border-radius: 4px;
      transition: all 0.2s ease;
    }

    .nav-link:hover {
      background-color: #e9ecef;
      color: #007bff !important;
    }

    .btn-outline-primary {
      margin-left: 8px;
    }

    .navbar-toggler {
      border: none;
      padding: 4px 8px;
    }

    .navbar-toggler:focus {
      box-shadow: none;
    }

    /* Đảm bảo dropdown không bị overflow hidden */
    .navbar-collapse {
      overflow: visible;
    }

    /* Style cho button Upload CV */
    .btn-upload-cv {
      background-color: #28a745;
      border-color: #28a745;
      color: white;
      margin-left: 8px;
      margin-right: 8px;
      padding: 8px 16px;
      border-radius: 6px;
      transition: all 0.2s ease;
    }

    .btn-upload-cv:hover {
      background-color: #218838;
      border-color: #1e7e34;
      color: white;
    }

    /* Style cho thanh tìm kiếm chính ở giữa */
    .search-input-main {
      width: 350px;
      border-radius: 6px 0 0 6px;
      border: 1px solid #dee2e6;
      padding: 8px 12px;
      font-size: 14px;
    }

    .search-input-main:focus {
      border-color: #007bff;
      box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .search-button-main {
      border-radius: 0 6px 6px 0;
      border: 1px solid #dee2e6;
      border-left: 0;
      padding: 8px 12px;
      background-color: #f8f9fa;
      color: #495057;
      transition: all 0.2s ease;
    }

    .search-button-main:hover {
      background-color: #007bff;
      color: white;
      border-color: #007bff;
    }

    .search-container {
      padding: 8px 16px;
    }

    .search-input {
      padding: 6px 12px;
      border: 1px solid #dee2e6;
      border-radius: 4px;
      width: 200px;
      font-size: 14px;
    }

    .search-button {
      padding: 6px 12px;
      margin-left: 8px;
      border: 1px solid #dee2e6;
      border-radius: 4px;
      background-color: #007bff;
      color: white;
      cursor: pointer;
    }

    .search-button:hover {
      background-color: #0056b3;
    }

    /* Fix cho dropdown trên mobile */
    @media (max-width: 991.98px) {
      .dropdown-menu {
        position: static;
        float: none;
        width: auto;
        margin-top: 0;
        background-color: transparent;
        border: 0;
        box-shadow: none;
      }

      .btn-upload-cv {
        margin: 8px 0;
        width: 100%;
      }

      .search-input-main {
        width: 100%;
      }

      .d-flex.mx-auto {
        flex-direction: column;
        width: 100%;
      }

      .d-flex.mx-auto .d-flex.me-3 {
        margin-bottom: 12px;
        margin-right: 0 !important;
      }
    }
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-lg custom-navbar">
    <div class="container-fluid">
      <!-- Logo/Brand -->
      <a class="navbar-brand" href="/home">
        <i class="fas fa-graduation-cap me-2"></i>
        Home
      </a>

      <!-- Toggle button cho mobile -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navbar content -->
      <div class="collapse navbar-collapse" id="navbarContent">
        <!-- Menu chính bên trái -->
        <ul class="navbar-nav me-auto">
          <!-- Dropdown Courses - Bỏ comment để test -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Courses
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/courses/create">
                  <i class="fas fa-plus me-2"></i>Add Courses
                </a></li>
              <li><a class="dropdown-item" href="/courses">
                  <i class="fas fa-list me-2"></i>All Courses
                </a></li>
              <li><a class="dropdown-item" href="/test/stored/courses">
                  <i class="fas fa-bookmark me-2"></i>My Courses
                </a></li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li><a class="dropdown-item" href="/courses/edit">
                  <i class="fas fa-edit me-2"></i>Edit Courses
                </a></li>
            </ul>
          </li>

          <!-- Business menu -->
          <li class="nav-item">
            <a class="nav-link" href="/business/register">
              <i class="fas fa-building me-1"></i>Business
            </a>
          </li>
        </ul>

        <!-- Thanh tìm kiếm và Upload CV ở giữa -->
        <div class="d-flex align-items-center mx-auto">
          <!-- Search Form -->
          <form action="/job/search" method="GET" class="d-flex me-3">
            <div class="input-group">
              <input type="text" name="keyWord" class="form-control search-input-main"
                placeholder="Tìm kiếm công việc, khóa học...">
              <button type="submit" class="btn btn-outline-secondary search-button-main">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </form>
        </div>
        <form id="uploadCVForm" action="/cv/upload" method="POST" enctype="multipart/form-data">
          <input type="file" name="cvFile" id="cvFileInput" accept=".pdf,.doc,.docx" style="display: none;">
          <button type="button" class="btn btn-upload-cv" style="width: 300px; margin-left: -100px;"
            onclick="handleUploadCV()">
            <i class="fas fa-file-upload me-2"></i>Upload CV
          </button>
        </form>
        <!-- Menu user bên phải -->
        <ul class="navbar-nav">
          <!-- User dropdown -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <!-- Hiển thị tên user / business / account -->
              <i class="fas fa-user me-1"></i> Account
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="/users/login">
                  <i class="fas fa-sign-in-alt me-2"></i>Login
                </a></li>
              <li><a class="dropdown-item" href="/users/create">
                  <i class="fas fa-user-plus me-2"></i>Register
                </a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>

  </nav>

  <!-- Hidden file input for CV upload -->
  <input type="file" id="cvFileInput" accept=".pdf,.doc,.docx" style="display: none;">

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Khởi tạo dropdown Bootstrap nếu cần
      const dropdownElementList = document.querySelectorAll('.dropdown-toggle');
      [...dropdownElementList].forEach(el => new bootstrap.Dropdown(el));

      // Debug
      console.log('Bootstrap loaded:', typeof bootstrap !== 'undefined');

      // Click thủ công dropdown nếu cần (tuỳ bạn có dùng hay không)
      dropdownElementList.forEach(function (element) {
        element.addEventListener('click', function (e) {
          e.preventDefault();
          const dropdownMenu = this.nextElementSibling;
          if (dropdownMenu && dropdownMenu.classList.contains('dropdown-menu')) {
            dropdownMenu.classList.toggle('show');
          }
        });
      });
    });

    // Hàm xử lý bấm nút Upload CV
    function handleUploadCV() {
      document.getElementById('cvFileInput').click();
    }

    // Xử lý khi file được chọn
    document.getElementById('cvFileInput').addEventListener('change', function (e) {
      const file = e.target.files[0];
      if (!file) return;

      const allowedTypes = [
        'application/pdf',
        'application/msword',
        'application/vnd.openxmlformats-officedocument.wordprocessingml.document'
      ];
      if (!allowedTypes.includes(file.type)) {
        alert('❌ Chỉ chấp nhận file PDF, DOC, hoặc DOCX!');
        return;
      }

      if (file.size > 5 * 1024 * 1024) { // 5MB
        alert('❌ File không được vượt quá 5MB!');
        return;
      }

      // Upload file lên server
      uploadCVToServer(file);
    });

    // Hàm upload CV lên server qua fetch
    function uploadCVToServer(file) {
      const formData = new FormData();
      formData.append('cvFile', file); // tên "cvFile" phải khớp với upload.single('cvFile') trên server

      fetch('/cv/upload', {
        method: 'POST',
        body: formData
      })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            alert(`✅ Upload thành công: ${data.fileName}`);
          } else {
            alert(`❌ Upload thất bại: ${data.message}`);
          }
        })
        .catch(error => {
          console.error('Upload error:', error);
          alert('❌ Có lỗi xảy ra khi upload CV!');
        });
    }
  </script>

</body>

</html>