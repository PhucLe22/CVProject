                        <p class="job-salary"><i class="fas fa-dollar-sign"></i> $2000 - $3500</p>
                    </div>
                    <form action="/jobs/software-engineer" class="job-form">
                        <button type="submit" class="apply-btn">
                            <i class="fas fa-paper-plane"></i>Apply
                        </button>
                    </form>
                </div>

                <div class="job-card">
                    <div class="job-header">
                        <h3 class="job-title">Marketing Specialist</h3>
                        <span class="job-type">Available</span>
                    </div>
                    <div class="job-details">
                        <p class="job-contact"><i class="fas fa-phone"></i> contact@company.com</p>
                        <p class="job-location"><i class="fas fa-map-marker-alt"></i> Da Nang</p>
                        <p class="job-salary"><i class="fas fa-dollar-sign"></i> $1500 - $2200</p>
                    </div>
                    <form action="/jobs/marketing-specialist" class="job-form">
                        <button type="submit" class="apply-btn">
                            <i class="fas fa-paper-plane"></i>Apply
                        </button>
                    </form>
                </div>

                <div class="job-card">
                    <div class="job-header">
                        <h3 class="job-title">Graphic Designer</h3>
                        <span class="job-type">Available</span>
                    </div>
                    <div class="job-details">
                        <p class="job-contact"><i class="fas fa-phone"></i> hr@design-studio.vn</p>
                        <p class="job-location"><i class="fas fa-map-marker-alt"></i> Remote Work</p>
                        <p class="job-salary"><i class="fas fa-dollar-sign"></i> $1800 - $2800</p>
                    </div>
                    <form action="/jobs/graphic-designer" class="job-form">
                        <button type="submit" class="apply-btn">
                            <i class="fas fa-paper-plane"></i>Apply
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
</body>

</html>